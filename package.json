{
  "name": "slicknode-runtime",
  "version": "0.3.0",
  "repository": "https://github.com/slicknode/slicknode-runtime.git",
  "author": "Meissner Consulting LLC <support@slicknode.com>",
  "license": "MIT",
  "types": "dist/index.d.ts",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "lint:fix": "tslint -c tslint.json --fix 'src/**/*.ts'",
    "build": "tsc",
    "build:test": "tsc -p tsconfig.test.json",
    "copy-fixtures": "copyfiles -u 3 src/__tests__/testmodules/**/* dist/__tests__/testmodules",
    "clean": "rimraf dist/*",
    "watch": "tsc --watch",
    "test": "npm run lint && npm run testonly",
    "testonly": "npm run build:test && npm run copy-fixtures && mocha --require esm 'dist/**/__tests__/**/*-test.{js,jsx}'",
    "testonly:cover": "nyc --reporter html --reporter text-summary -- npm run testonly",
    "testonly:coveralls": "nyc --silent -- npm run testonly && nyc report --reporter text-lcov | coveralls",
    "test-hack-module": "sed -i \"s/\"type\": \\\"module\\\"/\\\"type\\\": \\\"module\\\"/\\\" package.json",
    "dist": "npm run clean && tsc",
    "prepare": "npm run clean && npm run dist"
  },
  "directories": {
    "lib": "./dist"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "^10.12.18",
    "chai": "^4.3.4",
    "copyfiles": "^2.4.1",
    "coveralls": "^3.1.1",
    "esm": "^3.2.25",
    "mocha": "^8.4.0",
    "nyc": "^13.0.1",
    "rimraf": "^3.0.2",
    "ts-mocha": "^8.0.0",
    "ts-node": "^7.0.0",
    "tslint": "^5.11.0",
    "typescript": "^4.4.3"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "include": [
      "src/**/*"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  }
}
