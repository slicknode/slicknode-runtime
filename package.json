{
  "name": "slicknode-runtime",
  "version": "0.3.0",
  "repository": "https://github.com/slicknode/slicknode-runtime.git",
  "author": "Meissner Consulting LLC <support@slicknode.com>",
  "license": "MIT",
  "types": "dist/index.d.ts",
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint ./src --ext .ts",
    "lint:fix": "eslint ./src --fix --ext .ts",
    "build": "tsc",
    "build:test": "tsc -p tsconfig.test.json",
    "copy-fixtures": "copyfiles -u 3 src/__tests__/testmodules/**/* dist/__tests__/testmodules",
    "clean": "rimraf dist/*",
    "watch": "tsc --watch",
    "test": "npm run lint && npm run testonly",
    "testonly": "npm run build:test && npm run copy-fixtures && node ./script/change-module-type.mjs && mocha --require esm 'dist/**/__tests__/**/*-test.{js,jsx}' && node ./script/change-module-type.mjs module || (node ./script/change-module-type.mjs module && exit 1)",
    "testonly:cover": "nyc --reporter html --reporter text-summary -- npm run testonly",
    "testonly:coveralls": "nyc --silent -- npm run testonly && nyc report --reporter text-lcov | coveralls",
    "dist": "npm run clean && tsc",
    "prepare": "npm run clean && npm run dist"
  },
  "directories": {
    "lib": "./dist"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "^10.12.18",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "chai": "^4.3.4",
    "copyfiles": "^2.4.1",
    "coveralls": "^3.1.1",
    "eslint": "^7.32.0",
    "esm": "^3.2.25",
    "mocha": "^8.4.0",
    "nyc": "^13.0.1",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "ts-mocha": "^8.0.0",
    "ts-node": "^7.0.0",
    "typescript": "^4.4.3"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "include": [
      "src/**/*"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  },
  "type": "module"
}
