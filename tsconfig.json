{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "declaration": true,
    "lib": [
      "esnext",
      "esnext.asynciterable"
    ],
    "paths": {
      "*": [
        "src/types/*",
        "node_modules/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}