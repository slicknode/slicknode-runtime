{
  "compilerOptions": {
    "module": "ES2020",
    "esModuleInterop": true,
    "target": "ES2020",
    "noImplicitAny": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "declaration": true,
    "lib": ["esnext", "esnext.asynciterable"],
    "paths": {
      "*": ["src/types/*", "node_modules/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "**/__tests__",
    "**/__mocks__",
    "**/__integration__",
    "node_modules"
  ]
}
